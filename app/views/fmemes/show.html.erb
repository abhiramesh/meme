<%= content_for :head do %>
	<meta property="og:url" content="http://www.mememyfriends.com/fmemes/<%=@fmeme.id%>"/>
	<meta property="og:title" content="Meme My Friends"/>
	<meta property="og:image" content="<%=@fmeme.url%>"/>
	<meta property="og:description" content="I made this hilarious meme!"/>
<% end %>


<div class="container" align="center">
	<% if @post_permission == true %>
	<%= form_tag share_with_friend_path(:fmeme => @fmeme) do |f| %>
		<%= submit_tag "Share with #{@friend.name.split(' ')[0]}", :class => "facebook" %>
	<% end %>
	<% else %>
	<a href="/users/auth/facebook?scope=publish_actions&state=<%=@fmeme.id%>">
		<div class="facebook">
		Share with <%=@friend.name.split(' ')[0]%>
		</div>
	</a>
	<% end %>
	<img src="<%=@fmeme.url%>" class="img-responsive memeimg">
</div>